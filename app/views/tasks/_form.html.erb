<div class="row">
  
<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <form class="form-horizontal col-xs-12 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    <div class="form-group">
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :content, 'タスク名' %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.submit '追加', class: 'btn btn-primary' %>
    </div>
  </form>
  
<% end %>
